<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">

   <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
      <layout class="org.apache.log4j.PatternLayout">
         <!-- param name="ConversionPattern" value=":: [%d{ISO8601}] %-5p %c{1}.%M() %x - %m%n"/ -->
         <param name="ConversionPattern" value="[%d{ISO8601}][%-5p][%c{1}.%M()%L]-%m%n" />
      </layout>       
   </appender>

   <appender name="rollingLogFile" class="org.apache.log4j.RollingFileAppender">
      <param name="File" value="../TEMP/grantsws-applicant-ri-v2.log"/>
      <param name="MaxFileSize" value="5MB"/>
      <param name="MaxBackupIndex" value="3"/>
       <param name="Encoding" value="UTF-8"/>
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="[%d{ISO8601}][%-5p][%c{1}.%M()%L]-%m%n"/>
      </layout>   
   </appender>
   
   <category name="gov.grants">
      <priority value="debug"/>
   </category>
   
   <category name="org.apache">
      <priority value="info"/>
   </category>
   
   
   <root>
      <priority value="debug" />
      <appender-ref ref="rollingLogFile"/>
      <appender-ref ref="STDOUT"/>
   </root>

</log4j:configuration>
