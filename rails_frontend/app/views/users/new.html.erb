<div class="container">
  
  <div>
    <h1 class="center-align">Signup!</h1>
  </div>

  <div class="row">
    <div class="col s12 m4 center">
      <%= image_tag('bird.png', alt: 'bird', class: 'responsive-img') %>
      <p>
        Signing up takes like 30 seconds and is totally free.
      </p>
    </div>
    <div class="col s12 m4 center">
      <%= image_tag('socks.png', alt: 'bird', class: 'responsive-img') %>
      <p>
        You can checkout some grants from your couch if you want.
      </p>
    </div>
    <div class="col s12 m4 center">
      <%= image_tag('beaker.png', alt: 'bird', class: 'responsive-img') %>
      <p>
        Search all research grants. Why didn't anyone make this before?
      </p>
    </div>
  </div>

  <div class="row">

    <div class="col s12 l6 offset-l3">

      <!-- Send this form via get -->
      <%= form_for(@user) do |f| %>
        <%= render 'shared/user_error_messages' %>
        <div class="row">

          <div class="input-field col s12">
            
            <%= f.text_field :name %>
            <%= f.label :name %>

          </div>
          <div class="input-field col s12">
            <%= f.email_field :email %>
            <%= f.label :email %>
          </div>
          <div class="input-field col s12">
            <%= f.password_field :password %>
            <%= f.label :password %>
          </div>
          <div class="input-field col s12">
            <%= f.password_field :password_confirmation %>
            <%= f.label :password_confirmation, "Confirmation" %>
          </div>
          <div class="input-field col s12">
            <%= f.submit "Create my account", class: 'waves-effect waves-light btn' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
